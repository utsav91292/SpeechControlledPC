<Window x:Class="SpeechToText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Speech controlled PC" Height="227" Width="408" Closing="Window_Closing" Icon="/SpeechToText;component/Images/speech.ico" Topmost="True" WindowStyle="SingleBorderWindow">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ProgressBar Name="prgLevel" Height="10" Margin="3" />
        <ScrollViewer Name="scvText" Margin="3" Grid.Row="1" VerticalScrollBarVisibility="Visible">
            <TextBlock Grid.Row="1" Name="txtSpoken" FontSize="12" Foreground="Black" />
        </ScrollViewer>
        <Button Content="Close" Width="50" Grid.Row="2" Margin="3" HorizontalAlignment="Right" Click="Button_Click" />
    </Grid>
</Window>
